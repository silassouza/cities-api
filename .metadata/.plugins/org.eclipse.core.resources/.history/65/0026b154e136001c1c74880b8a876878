package com.example.citiesapi.staties.entities

import javax.persistence.Column
import javax.persistence.Convert
import javax.persistence.Entity
import javax.persistence.Id
import javax.persistence.Table

import org.springframework.data.geo.Point

import com.example.citiesapi.utils.PointConverter

//import org.springframework.data.geo.Point

@Entity
@Table(name = "pais")
class Country {

	@Id
	@Column(name = "id")
	def Long id;

	@Column(name = "nome")
	def String name;
	
	@Column(name = "nome_pt")
	def String portugueseName;

	@Column(name = "sigla")
	def String code;
  
	@Column(name = "bacen")
	def Integer bacen;
}
